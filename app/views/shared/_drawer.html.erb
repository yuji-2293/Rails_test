<div class="drawer">
  <input id="my-drawer" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content">

    <!-- ドロワー開閉ボタン -->
    <label for="my-drawer" class="drawer-button cursor-pointer">Open drawer</label>
  </div>
  <div class="drawer-side">
  <%# ドロワー制御コード %>
    <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
    <ul class="menu bg-none text-base-content min-h-full w-100 p-8">
      <!-- ここから　ドロワー内のスライダーメニュー -->
<%# 一覧テーブル %>

<% @colors.each do |color| %>
<% if color && color.mood_color_id.present? %>

<% color_class = Color.class_for_id(color.mood_color_id.to_i) %>

<div class="overflow-x-auto border-l-black rounded-md shadow-lg bg-white my-4">
  <table class="table rounded-md shadow-md">
    <thead>
      <tr>
        <th><%= l color.created_at, format: :short%></th>
        <th>今日の私の気分</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <div class="flex items-center gap-3">
            <div class="avatar">
              <div class="mask mask-squircle h-12 w-12">
                <img
                  src="https://img.daisyui.com/images/profile/demo/2@94.webp"
                  alt="Avatar Tailwind CSS Component" />
              </div>
            </div>
            <div>
              <div class="font-bold"><%= color.user.first_name %> <%= color.user.last_name %></div>
            </div>
          </div>
        </td>

        <td><div class="color-ball w-10 h-10 rounded-full mx-auto <%= color_class %>"></div></td>
      </tr>
  </table>
</div>
<%# ここまで %>
<% else %>
<p>no colors</p>
<% end %>
<% end %>

    </ul>
  </div>
</div>


