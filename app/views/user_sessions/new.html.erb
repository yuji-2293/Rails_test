      <%= render 'shared/flash_message' %>
      <h1>ログイン</h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-3">
          <%= f.label :email, class:"grow"%>
          <%= f.email_field :email, class: "input input-bordered flex items-center" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, class: "grow" %>
          <%= f.password_field :password, class: "input input-bordered flex items-center" %>
        </div>
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>
      <div class='text-center'>
        <%= link_to '登録ページへ', new_user_path %>
        <%= link_to 'パスワードをお忘れの方はこちら', '#' %>
      </div>